
/*
 * KPI file for displaying employee productivity.
 */
.name:Employee productivity
.description:Closed activities by user for current month
.enabled:bool:true
.type:pie
.lambda
   data.connect:[generic|aista-crm]
      date.now
      date.format:x:-
         format:yyyy-MM-00
      data.select:@"
select username as name, count(*) as value
   from activities
      where closed > @date
   group by username"
         @date:x:@date.format
      return-nodes:x:-/*
